{
  "name": "uptoolkit",
  "version": "2.0.0",
  "private": true,
  "dependencies": {
    "@fontsource/inter": "^4.5.0",
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/chrome": "^0.0.159",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.8",
    "axios": "^0.21.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "watch": "cra-build-watch",
    "build": "react-scripts build && yarn build:background",
    "build:background": "node_modules/.bin/tsc ./src/background.ts --outDir ./build --module es6 --target es5 --moduleResolution node --isolatedModules false",
    "watch:background": "node_modules/.bin/tsc ./src/background.ts --watch --outDir ./build --module es6 --target es5 --moduleResolution node --isolatedModules false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cra-build-watch": "^3.4.0",
    "prettier": "^2.3.2"
  }
}
